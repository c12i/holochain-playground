{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"sourceMap": true,
		"baseUrl": ".",
		"types": ["node"],
		"paths": {
			"@/*": ["./src/*"]
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"],
		"moduleResolution": "node",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules/**/*", "dist"]
}
